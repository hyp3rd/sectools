---
extends: default
rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  truthy: disable
ignore: |
  .golangci.yaml
  .github/workflows/*
  .github/FUNDING.yml
  buf.gen.yaml
  buf.yaml
  **/vendor/**
  **/openapi.yaml
